{% extends 'base.html.twig' %}

{% block title %}{{ product.defaultname }}!{% endblock %}

{% block categories_menu %}
    <div class="cat_menu_container">
        <div class="cat_menu_title d-flex flex-row align-items-center justify-content-start">
            <div class="cat_burger"><span></span><span></span><span></span></div>
            <div class="cat_menu_text">{{'categories' | trans}}</div>
        </div>

        <ul class="cat_menu">
            {% for category in categories %}
                {% if category.enableChildren %}
                    <li class="hassubs">
                        <a href="#">{{ category.defaultname }}<i class="fas fa-chevron-right"></i></a>
                        <ul>
                            {% for childcategory in category.children %}
                                <li><a href="{{ path('category_show', {'id': childcategory.id}) }}">{{ childcategory.defaultname }}<i class="fas fa-chevron-right"></i></a></li>
                            {% endfor %}
                        </ul>
                    </li>
                {% else %}
                    <li><a href="{{ path('category_show', {'id': category.id}) }}">{{ category.defaultname }}<i class="fas fa-chevron-right ml-auto"></i></a></li>
                {% endif %}
            {% endfor %}
        </ul>
    </div>
{% endblock %}

{% block main_nav_menu%}
    {{ product.defaultname }}<br>
    {{ product.cost }}<br>
{% endblock %}